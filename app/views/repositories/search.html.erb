<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<%= if @repositories %>
  <ul>
  <% @repositories.each do |repo| %>
    <li>
      <%= link_to repo['name'], repo['html_url'] %><br>
      <%= repo['description'] %>
    </li>
  <% end %>
  </ul>
<% elsif @error %>

<% end %>
  

